<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/com_auth0_lock_radio_button_checked_color" />
            <stroke android:width="1dp" android:color="@color/com_auth0_lock_radio_button_checked_color" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="2dp" android:topLeftRadius="0dp" android:topRightRadius="2dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/com_auth0_lock_radio_button_unchecked_color" />
            <stroke android:width="1dp" android:color="@color/com_auth0_lock_radio_button_checked_color" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="2dp" android:topLeftRadius="0dp" android:topRightRadius="2dp" />
        </shape>
    </item>

</selector>