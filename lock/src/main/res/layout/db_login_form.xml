<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:custom="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:showIn="@layout/fragment_database_login">

    <LinearLayout
        android:id="@+id/db_login_credentials"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/box_credential_background">
        <com.auth0.lock.widget.CredentialField
            android:id="@+id/db_login_username_field"
            android:tag="db_login_username_field"
            android:layout_width="match_parent"
            android:layout_height="@dimen/credential_field_height"
            android:textSize="@dimen/credential_field_font_size"
            android:textColorHint="@color/credential_field_hint"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/credential_field_padding"
            android:paddingRight="@dimen/credential_field_padding"
            android:drawablePadding="@dimen/credential_field_icon_right_padding"
            android:background="@color/credential_field_background"
            android:hint="@string/email_placeholder"
            custom:normalIconDrawable="@drawable/ic_email"
            custom:errorIconDrawable="@drawable/ic_email_error"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/credential_box_border_width"
            android:background="@color/credential_box_border"/>
        <com.auth0.lock.widget.CredentialField
            android:id="@+id/db_login_password_field"
            android:tag="db_login_password_field"
            android:layout_width="match_parent"
            android:layout_height="@dimen/credential_field_height"
            android:textSize="@dimen/credential_field_font_size"
            android:textColorHint="@color/credential_field_hint"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/credential_field_padding"
            android:paddingRight="@dimen/credential_field_padding"
            android:drawablePadding="@dimen/credential_field_icon_right_padding"
            android:background="@color/credential_field_background"
            android:hint="@string/password_placeholder"
            custom:normalIconDrawable="@drawable/ic_lock"
            custom:errorIconDrawable="@drawable/ic_lock_error"
            />
    </LinearLayout>

    <Button
        android:id="@+id/db_access_button"
        android:tag="db_access_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/primary_button_height"
        android:layout_below="@id/db_login_credentials"
        android:layout_marginTop="@dimen/lock_vertical_margin"
        android:text="@string/db_login_btn_text"
        android:textColor="@color/primary_button_text"
        android:background="@drawable/btn_primary_background"
        android:textSize="@dimen/primary_button_text_size"
        android:fontFamily="sans-serif-medium"/>

    <ProgressBar
        android:id="@+id/db_login_progress_indicator"
        android:tag="db_login_progress_indicator"
        android:visibility="gone"
        android:layout_width="@dimen/primary_button_progress_size"
        android:layout_height="@dimen/primary_button_progress_size"
        android:layout_alignTop="@id/db_access_button"
        android:layout_alignBottom="@id/db_access_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/db_signup_button"
        android:tag="db_signup_button"
        android:layout_width="@dimen/secondary_button_width"
        android:layout_height="@dimen/secondary_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/secondary_button_text_size"
        android:textStyle="bold"
        android:textColor="@color/secondary_button_text"
        android:background="@drawable/btn_secondary_background"
        android:layout_marginBottom="@dimen/secondary_button_margin_bottom"
        android:text="@string/db_signup_button_text"/>
    <Button
        android:id="@+id/db_reset_pass_button"
        android:tag="db_reset_pass_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/secondary_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/secondary_button_text_size"
        android:textStyle="bold"
        android:textColor="@color/secondary_button_text"
        android:background="@drawable/btn_secondary_background"
        android:text="@string/db_reset_password_button_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="@dimen/secondary_button_margin_bottom"/>

</merge>