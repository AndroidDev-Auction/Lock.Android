<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="#000000">

    <ImageView
        android:id="@+id/com_auth0_lock_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="center"
        tools:background="@drawable/com_auth0_lock_rounded_btn_bg_left"
        tools:src="@drawable/com_auth0_social_icon_facebook" />

    <TextView
        android:id="@+id/com_auth0_lock_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textSize="20sp"
        tools:background="@drawable/com_auth0_lock_rounded_btn_bg_right"
        tools:text="Login with facebook"
        tools:textColor="@android:color/white" />

</LinearLayout>