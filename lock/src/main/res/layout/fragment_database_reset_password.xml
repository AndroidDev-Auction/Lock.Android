<RelativeLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:custom="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:background="#ffffff"
             tools:context="com.auth0.lock.fragment.DatabaseResetPasswordFragment">


    <include layout="@layout/title_lock"/>


    <LinearLayout
        android:id="@+id/db_reset_password_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
            <TextView
                android:id="@+id/db_reset_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:text="@string/db_reset_password_title_message"/>

            <LinearLayout
                android:id="@+id/db_reset_password_credentials"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/db_reset_password_title"
                android:background="@drawable/box_credential_background">
                <com.auth0.lock.widget.CredentialField
                    android:id="@+id/db_reset_password_username_field"
                    android:tag="db_reset_password_username_field"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@android:color/transparent"
                    android:nextFocusDown="@+id/db_reset_password_password_field"
                    android:nextFocusUp="@+id/db_reset_password_repeat_password_field"
                    android:hint="@string/email_placeholder"
                    custom:normalIconDrawable="@drawable/ic_email"
                    custom:errorIconDrawable="@drawable/ic_email_error"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:focusable="false"
                    android:background="#000000"/>
                <com.auth0.lock.widget.CredentialField
                    android:id="@+id/db_reset_password_password_field"
                    android:tag="db_reset_password_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/password_placeholder"
                    custom:normalIconDrawable="@drawable/ic_lock"
                    custom:errorIconDrawable="@drawable/ic_lock_error"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:focusable="false"
                    android:background="#000000"/>
                <com.auth0.lock.widget.CredentialField
                    android:id="@+id/db_reset_password_repeat_password_field"
                    android:tag="db_reset_password_repeat_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_lock"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/repeat_password_placeholder"
                    custom:normalIconDrawable="@drawable/ic_lock"
                    custom:errorIconDrawable="@drawable/ic_lock_error"
                    />
            </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/db_reset_button"
        android:tag="db_reset_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/db_reset_password_group"
        android:layout_marginTop="5dp"
        android:text="@string/db_reset_password_btn_text"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_primary_background"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"/>

    <ProgressBar
        android:id="@+id/db_reset_password_progress_indicator"
        android:tag="db_reset_password_progress_indicator"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/db_reset_button"
        android:layout_alignBottom="@id/db_reset_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/db_reset_password_cancel_button"
        android:tag="db_reset_password_cancel_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#4d4d4d"
        android:background="@drawable/btn_secondary_background"
        android:text="@string/db_cancel_button_text"/>

</RelativeLayout>
