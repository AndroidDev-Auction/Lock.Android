<RelativeLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin"
             tools:context="com.auth0.lock.fragment.DatabaseResetPasswordFragment">


    <include layout="@layout/title_lock"/>


    <LinearLayout
        android:id="@+id/db_reset_password_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
            <TextView
                android:id="@+id/db_reset_password_title"
                style="?attr/Auth0.Message"
                android:layout_width="@dimen/db_reset_password_message_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/db_reset_password_title_message"/>

            <LinearLayout
                android:id="@+id/db_reset_password_credentials"
                style="?attr/Auth0.CredentialBox"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.auth0.lock.widget.CredentialField
                    android:id="@+id/db_reset_password_username_field"
                    android:tag="db_reset_password_username_field"
                    style="?attr/Auth0.CredentialField.Email"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/db_reset_password_password_field"
                    android:nextFocusUp="@+id/db_reset_password_repeat_password_field"
                    android:hint="@string/email_placeholder"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/credential_box_border_width"
                    android:focusable="false"
                    android:background="?attr/Auth0.Separator.Color"/>
                <com.auth0.lock.widget.CredentialField
                    android:id="@+id/db_reset_password_password_field"
                    android:tag="db_reset_password_password_field"
                    style="?attr/Auth0.CredentialField.Password"
                    android:inputType="textPassword"
                    android:hint="@string/password_placeholder"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/credential_box_border_width"
                    android:focusable="false"
                    android:background="?attr/Auth0.Separator.Color"/>
                <com.auth0.lock.widget.CredentialField
                    android:id="@+id/db_reset_password_repeat_password_field"
                    android:tag="db_reset_password_repeat_password_field"
                    style="?attr/Auth0.CredentialField.Password"
                    android:inputType="textPassword"
                    android:hint="@string/repeat_password_placeholder"
                    />
            </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/db_reset_button"
        android:tag="db_reset_button"
        style="?attr/Auth0.PrimaryButtonStyle"
        android:layout_below="@id/db_reset_password_group"
        android:layout_marginTop="@dimen/lock_vertical_margin"
        android:text="@string/db_reset_password_btn_text"
        android:fontFamily="sans-serif-medium"/>

    <ProgressBar
        android:id="@+id/db_reset_password_progress_indicator"
        android:tag="db_reset_password_progress_indicator"
        android:visibility="gone"
        android:layout_width="@dimen/primary_button_progress_size"
        android:layout_height="@dimen/primary_button_progress_size"
        android:layout_alignTop="@id/db_reset_button"
        android:layout_alignBottom="@id/db_reset_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/db_reset_password_cancel_button"
        android:tag="db_reset_password_cancel_button"
        style="?attr/Auth0.SecondaryButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/db_cancel_button_text"/>

</RelativeLayout>
